<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz App"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Title"/>

    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_below="@id/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:background="@drawable/ic_launcher_background"
        android:visibility="invisible"
        android:id="@+id/QuizImage"/>

    <TextView
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_below="@id/QTitleText"
        android:layout_centerHorizontal="true"
        android:text="Question 1:\nPlaceholder"
        android:textSize="25sp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:id="@+id/QuestionText"
        />

    <TextView
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:layout_below="@id/QuizImage"
        android:layout_centerHorizontal="true"
        android:text="Press Start Button"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/QTitleText"
        />

    <Button
        android:layout_width="170sp"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:translationX="75px"
        android:text="True"
        android:textSize="40sp"
        android:backgroundTint="@color/blue"
        android:layout_marginBottom="55sp"
        android:visibility="invisible"
        android:id="@+id/TrueBtn"/>

    <Button
        android:layout_width="170sp"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:translationX="-75px"
        android:text="False"
        android:textSize="40sp"
        android:backgroundTint="@color/blue"
        android:layout_marginBottom="55sp"
        android:visibility="invisible"
        android:id="@+id/FalseBtn"/>

    <Button
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:textSize="25sp"
        android:backgroundTint="@color/blue"
        android:id="@+id/StartBtn"/>

    <Button
        android:layout_width="170sp"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Finish"
        android:textSize="40sp"
        android:backgroundTint="@color/blue"
        android:layout_marginBottom="55sp"
        android:visibility="invisible"
        android:id="@+id/FinishBtn"/>
</RelativeLayout>